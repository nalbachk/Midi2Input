<Window x:Class="Midi2Input.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Midi2Input"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px" />
            <RowDefinition />
            <RowDefinition Height="200px" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="BtnLoad" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="BtnLoad_Click"/>
        <Button Grid.Row="0" x:Name="BtnStart" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Click="BtnStart_Click"/>
        <TextBox Grid.Row="1" x:Name="TxtConfig" IsReadOnly="False" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
        <TextBox Grid.Row="2" x:Name="TxtLog" MaxLines="8" IsReadOnly="True"/>
	</Grid>
</Window>
